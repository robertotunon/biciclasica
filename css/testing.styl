    	padding 0 2rem

.inner
	max-width 960px
	margin 0 auto
	@media (max-width: 768px)
    	padding 0 2rem
	
/* header */
.site_header
	position relative
	max-width 960px
	margin .5rem auto 1rem
	border-bottom 1px solid gris_muybajao
	box-sizing border-box
	@media (max-width: 768px)
    	margin .5rem 2rem 1rem
    @media (max-width: 480px)
    	border none
    &.header_02
    	font-family 'roboto_local', sans-serif

.status_bar
	font-size .75rem
	line-height 1em
	color gris_claro
	padding 0 0 .25rem
	border-bottom 1px solid gris_minimo
	justify-content flex-start
	align-items center
	@media (max-width: 480px)
		justify-content flex-end
	nav
		flex-grow 0
		flex-shrink 0
		li
			display inline-block
			line-height 1em
	.lang_nav
		margin 0 .75rem 0 0
		@media (max-width: 480px)
			display none
		.lang_menu
			flex-basis 25%
			li
				&:after
					content '/'
					color gris_masclaro
					margin 0 0 0 .25rem
				&:last-of-type
					&:after
						content ''
				a
					color gris_claro
					&.active
						color gris_masclaro
	.status_message
		flex-grow 1
		flex-shrink 1
		@media (max-width: 480px)
			display none
	.secondary_nav
		align-self flex-end
		.secondary_menu
			li
				margin 0 0 0 .35rem
				@media (max-width: 480px)
					margin 0 0 0 .5rem
				a
					color gris_claro
					@media (max-width: 480px)
						display block
				&:after
					content '|'
					color gris_bajao
					margin 0 0 0 .35rem
					@media (max-width: 480px)
						content initial
				&:last-of-type
					&:after
						content ''
						margin 0
			.phone
				a
					@media (max-width: 480px)
						text-indent -9999px
						width 1.5rem
						height 1.5rem
						background url(../img/icon_phone.svg) no-repeat center
						background-size contain
			.login
				a
					@media (max-width: 480px)
						text-indent -9999px
						width 1.5rem
						height 1.5rem
						background url(../img/icon_user.svg) no-repeat center
						background-size contain
			.cart
				a
					@media (max-width: 480px)
						text-indent -9999px
						width 1.5rem
						height 1.5rem
						background url(../img/icon_cart.svg) no-repeat center
						background-size contain
					&:after
						content ''
						width .875rem
						height .75rem
						display inline-block
						vertical-align bottom
						line-height 1em
						margin 0 0 0 .15rem
						background url(../img/icon_cart.svg) no-repeat center
						background-size contain

.site_title
	width 15rem
	height 3rem
	margin 1.5rem auto 2rem
	text-align center
	text-indent -9999px
	background url(../img/logo_biciclasica.jpg) no-repeat center
	background-size contain
	position relative
	@media (max-width: 480px)
		margin 1.5rem auto 2rem
	&:before
		content ''
		display block
		width 1.125rem
		height 1.125rem
		position absolute
		top -2.05rem
		left 48%
		right 48%
		margin 0 auto
		background url(../img/icon_star.svg) no-repeat center
		background-size contain
	.name
		font-weight normal
		font-size 1.85rem
		line-height 1em
		margin 0
	.tagline
		font-weight normal
		font-size 1.05rem
		line-height 1em
		margin 0

.header_02
	.site_title
		width 16.25rem
		height 3rem
		background url(../img/logo_biciclasica_02.jpg) no-repeat center

.main_nav
    padding 0 0 .25rem 0
    transition .35s all ease-out
    @media (max-width: 480px)
    	height 0
    	overflow hidden
	.main_menu
		position relative
		text-align center
		li
			margin 0 .5rem
			display inline-block
			vertical-align middle
			@media (max-width: 480px)
				display block
				margin .5rem
			a
				font-weight 400
				font-size .85rem
				line-height 1em
				text-transform uppercase
				@media (max-width: 480px)
					display block
					padding .5rem
			&.search
				position absolute
				top 0
				right 0
				margin 0
				@media (max-width: 480px)
					position initial
					margin .5rem 0
					display none
				input
					height 1rem
					font-size .85rem
					margin 0 0 .25rem
					padding 0
					border none
					background url(../img/icon_lupa.svg) no-repeat center right
					background-size contain
.hide_search
	font-size 1rem
	margin 0 0 2rem
	padding .5rem
	background url(../img/icon_lupa.svg) no-repeat center right
	background-size 7%
	display none
	@media (max-width: 480px)
		display block
		

/*_______ Menú respondón _______*/
.open_menu
  width 1.5rem
  height 1.5rem
  position absolute
  top 0
  left 0
  cursor pointer
  outline 0
  text-indent -9999px
  background url(../img/icon_menu.svg) no-repeat center
  display none
  @media (max-width: 480px)
    display block

#menutoggle
  display none
  &:checked + nav
    height 18rem



