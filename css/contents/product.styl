/* _____________ Shoping cart ______________ */
.toggle_cart
	display none
	&:checked ~ .minicesta
		top 2rem
		opacity 1
		height auto
	@media (max-width: 768px)
		&:checked ~ .minicesta
			top 0
			right 0
			opacity 1
	&:checked ~ .minicesta .close_cart
		display block

.minicesta
	position absolute
	top -2rem
	right 2rem
	width 300px
	height 0
	max-height 400px
	padding 1rem
	background-color gris_minimo
	transition all .25s ease-out
	opacity 0
	overflow hidden
	@media (max-width: 768px)
		position fixed
		top 0
		bottom 0
		height 100%
		max-height 100%
		right -100vw
		width 80vw
		height 100vh
	.close_cart
		display none
		position absolute
		top 1rem
		right 1rem
		width 1rem
		height 1rem
		text-indent -9999px
		background url(../svg/icon_close.svg) no-repeat center
		background-size contain
	.section_header
		margin-bottom .5rem
		@media (max-width: 768px)
			margin-bottom 1rem
		.section_title
			font-size 1.25rem
	.shoplist
		max-height 240px
		overflow-y scroll
		@media (max-width: 768px)
			max-height 70vh
		.item
			&:last-of-type
				margin-bottom 0
				border none
			.product_thumb
				margin 0 .5rem .5rem 0
				flex 0 1 25%
				@media (max-width: 768px)
					flex 0 1 30%
			.product_name
				font-family primary_font
				font-style normal
				font-size .875rem
				margin 0 auto .5rem 0
				flex 0 1 70%
				@media (max-width: 768px)
					font-family secondary_font
					font-size 1rem
					margin-bottom 1rem
					flex 0 1 65%
			.quantity
				margin 0 .5rem 0 0
				flex 0 1 25%
				text-align right
				&:before
					content 'x'
					display inline-block
					vertical-align middle
					width .5rem
					height .5rem
					font-size .75rem
				.current_quantity
					width .75rem
					height .75rem
					background transparent
					border none
					@media (max-width: 768px)
						width 1.25rem
						height 1.25rem
						background white
						border 1px solid gris_bajao
				.btn
					display none
				@media (max-width: 768px)
					text-align center
					flex 0 1 30%
					&:before
						display none
					.btn
						display inline-block
			.price
				font-family primary_font
				font-size 1.15rem
				margin 0 auto 0 0
				flex 0 1 65%
				@media (max-width: 768px)
					text-align right
					margin 0 0 0 auto
					flex 0 1 60%
			.delete
				order 3
				margin 0 0 0 auto
				flex 0 1 4%
				@media (max-width: 768px)
					order initial
	.totalcart
		margin .5rem 0 0
		padding .5rem 0 0
		background-color gris_minimo
		border-top 1px solid gris_masclaro
		justify-content flex-end
		align-items baseline
		@media (max-width: 768px)
			position fixed
			bottom 0
			width 72vw
			margin-bottom 1rem
		.total
			font-weight 400
			font-size 1.25rem
			line-height 1em
			margin 0
			flex 0 1 20%
		.price
			font-family secondary_font
			font-size 1.5rem
			line-height 1em
			text-align right
			margin 0 0 .5rem auto
			.decimals
				font-size 80%
			.currency
				font-size 90%
				margin 0 0 0 -.15rem
	.tocheckout
		flex 1 1 100%
		margin 0 auto
		&:not(.mobile)
			@media (max-width: 768px)
				display none
		&.mobile
			display none
			@media (max-width: 768px)
				display initial