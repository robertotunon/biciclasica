	width 2rem !important
	height 2rem !important
	background transparent !important
	padding 0 !important
	&:hover
		background transparent
	&.previous
		svg
			left 0
	&.next
		svg
			right 0
			left auto

.product_thumbs
	width 100%
	.flickity-viewport
		max-width 96%
		margin 0 auto
	.flickity-prev-next-button
		&.previous
			left -.15rem
		&.next
			right -.15rem

.product_list
	width 96%
	margin 0 auto
	.flickity-prev-next-button
		&.previous
			left -1.25rem
		&.next
			right -1.25rem

