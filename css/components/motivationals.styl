/* ________ Motivacionales  ________ */
.motivationals
	padding-top 1.5rem
	border-top 1px solid gris_muybajao
	@media (max-width: 940px)
		margin 0 1rem 2rem
		padding 1.5rem 0 0
	@media (max-width: 480px)
		margin 0 1rem 0
		padding 1.5rem 0 0
	ul
		justify-content space-between
	.motivational
		flex-basis 24%
		@media (max-width: 940px)
			text-align center
			flex-basis 24%
		@media (max-width: 680px)
			flex-basis 48%
			margin 0 0 2rem
		&:before
			content ''
			display inline-block
			width 3.75rem
			height 3.75rem
			margin 0 .5rem 0 0
			box-sizing border-box
			border-radius 50%
			flex 0 0 auto
			@media (max-width: 940px)
				width 3.5rem
				height 3.5rem
				margin 0 auto .5rem
		&.bestprice
			&:before
				background url(../svg/icon_money.svg) no-repeat center gris_masclaro
				box-shadow 0 0 0 2px white, 0 0 0 4px gris_masclaro
		&.sending
			&:before
				background url(../svg/icon_envio.svg) no-repeat center gris_masclaro
				box-shadow 0 0 0 2px white, 0 0 0 4px gris_masclaro
		&.delivery
			&:before
				background url(../svg/icon_rocket.svg) no-repeat center gris_masclaro
				box-shadow 0 0 0 2px white, 0 0 0 4px gris_masclaro
		&.stock
			&:before
				background url(../svg/icon_stock.svg) no-repeat center gris_masclaro
				box-shadow 0 0 0 2px white, 0 0 0 4px gris_masclaro
		.info
			align-self center
			flex 0 1 69%
			@media (max-width: 940px)
				flex 1 1 100%
			.title
				font-family secondary_font
				font-style italic
				font-size 1.375rem
				letter-spacing -.05rem
				line-height 1em
				color gris_claro
				margin 0 0 .25rem 0
				@media (max-width: 480px)
					font-size 1.25rem
			.text
				font-size 0.825rem
				line-height 1.2em
				color gris_masclaro
				margin 0